<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_elements_pick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.navigationdrawerexample.ElementsPickActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                style="@style/RelLayStyle"
                android:layout_weight="1">

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBox1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />

                <Button
                    android:text="Btn"
                    android:layout_height="50dp"
                    android:id="@+id/button1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/checkBox1"
                    android:layout_toEndOf="@+id/checkBox1"
                    android:layout_marginLeft="@dimen/bottons_marginLeft"
                    android:layout_marginStart="@dimen/bottons_marginLeft"
                    android:layout_width="90dp" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/RelLayStyle">

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBox2"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/checkBox2"
                    android:layout_toEndOf="@+id/checkBox2"
                    android:layout_marginLeft="@dimen/bottons_marginLeft"
                    android:layout_marginStart="@dimen/bottons_marginLeft">

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button21"
                        android:layout_margin="3dp"
                        android:layout_weight="1" />

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button22"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/RelLayStyle">

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBox3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="50dp"
                    android:layout_width="200dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/checkBox3"
                    android:layout_toEndOf="@+id/checkBox3"
                    android:layout_marginLeft="@dimen/bottons_marginLeft"
                    android:layout_marginStart="@dimen/bottons_marginLeft">

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button31"
                        android:layout_weight="1" />

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button32"
                        android:layout_weight="1" />
                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button33"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/RelLayStyle">

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBox4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="50dp"
                    android:layout_width="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/checkBox4"
                    android:layout_toEndOf="@+id/checkBox4"
                    android:layout_marginLeft="@dimen/bottons_marginLeft"
                    android:layout_marginStart="@dimen/bottons_marginLeft">

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button41"
                        android:layout_weight="1" />

                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button42"
                        android:layout_weight="1" />
                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button43"
                        android:layout_weight="1" />
                    <Button
                        android:text="Btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:id="@+id/button44"
                        android:layout_weight="1" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                style="@style/RelLayStyle">

                <com.example.alex.navigationdrawerexample.JoysticView
                    android:layout_width="220dp"
                    android:id="@+id/joystic"
                    app:JV_borderWidth="4dp"
                    app:JV_fixedCenter="false"
                    android:layout_height="220dp"
                    app:JV_buttonColor="@color/colorViolet"
                    app:JV_borderColor="@color/colorViolet2"
                    app:JV_enabled="false"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="18dp" />

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBoxJoy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp">

                <CheckBox
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:id="@+id/checkBoxBtnJoy"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="21dp"
                    android:layout_marginStart="21dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/linear_layout"

                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <Button
                            style="@style/ControlButton"
                            android:id="@+id/buttonUp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            style="@style/ControlButton"
                            android:id="@+id/buttonLeft"
                            android:layout_weight="1" />

                        <Button
                            style="@style/ControlButton"
                            android:id="@+id/buttonCenter"
                            android:layout_weight="1" />

                        <Button
                            style="@style/ControlButton"
                            android:id="@+id/buttonRight"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/button15"
                            android:layout_weight="1" />

                        <Button
                            style="@style/ControlButton"
                            android:id="@+id/buttonDown"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/button13"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>
                />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
