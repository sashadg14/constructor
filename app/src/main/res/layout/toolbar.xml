<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toolbar">

    <Button
        android:background="@drawable/position_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/positionButton"
        android:layout_weight="1" />

    <Button
        android:background="@drawable/text_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/txtButton"
        android:layout_weight="1" />

    <Button
        android:background="@drawable/action_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/actionButton"
        android:layout_weight="1" />

    <Button
        android:background="@drawable/size_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sizeButton"
        android:layout_weight="1" />

    <Button
        android:background="@drawable/color_toolbar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/colorButton"
        android:layout_weight="1" />

</LinearLayout>